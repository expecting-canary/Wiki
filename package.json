{
  "name": "@brainote/root",
  "version": "0.1.0",
  "description": "application e-commerce",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "pnpm run build",
    "clean": "",
    "publish": "",
    "precommit": "jest && npm run fix && npm run prettify",
    "fix": "eslint --fix -p tsconfig.json",
    "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status",
    "lint": "concurrently 'npm run lint:packages' 'npm run lint:spec'",
    "lint:packages": "eslint 'packages/**/**.ts' --fix --ignore-pattern 'packages/**/*.spec.ts'",
    "lint:spec": "eslint 'packages/**/**.spec.ts' -c '.eslintrc.spec.js' --fix",
    "serve": "cd ./packages/server && npm run start:dev",
    "start": "cd ./packages/app && npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --watchAll --coverage"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^13.13.51",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^8.10.2",
    "typescript": "^4.2.4"
  }
}
